@{
  Layout = "_Layout";
}

@using TreatTracker.Models;

<h1>Full Flavor List</h1>
<em>Find what flavor your heart desires!</em>
<hr>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 
else
{
  <main class="flavor-index-list">
    @foreach (Flavor flavor in Model)
    {
      <div class="flavor-card">
        <h3>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</h3>
        <p>@flavor.Description</p>
      </div>
    }
  </main>
}

<hr>

@if (User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Add new flavor", "Create")</p>
}
<hr>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
